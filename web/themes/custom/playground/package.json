{
  "name": "playground",
  "version": "1.0.0",
  "description": "Packages for the playground theme",
  "private": true,
  "scripts": {
    "postinstall": "npm run build",
    "test": "jest",
    "scss:compile": "node-sass --include-path ./node_modules --sourceMap true --output-style compressed $npm_package_config_sass_src $npm_package_config_css_dist",
    "scss:autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers \"last 2 versions\" -r $npm_package_config_css_dist",
    "format:app": "prettier --loglevel silent --write  ./src/app/**/*.js",
    "format:js": "prettier --loglevel silent --write  ./src/js/**/*.js",
    "format:scss": "prettier --loglevel silent --write  ./src/sass/**/*.scss",
    "build:app": "npm run format:app && webpack --config-name app",
    "build:js": "npm run format:js && webpack --config-name main",
    "build:scss": "npm run format:scss && npm run scss:compile && npm run scss:autoprefixer",
    "build": "npm-run-all --parallel build:**",
    "watch:app": "chokidar \"./src/app\" -c \"npm run build:app\"",
    "watch:scss": "chokidar \"./src/sass\" -c \"npm run build:scss\"",
    "watch:js": "chokidar \"./src/js\" -c \"npm run build:js\"",
    "watch": "npm run build && npm-run-all --parallel watch:**",
    "sync": "browser-sync $npm_package_config_domain $npm_package_config_dist_dir $npm_package_config_template_dir -w",
    "start": "npm-run-all --parallel watch sync"
  },
  "author": "Tom Evans",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "autoprefixer": "^9.8.0",
    "axios": "^0.19.2",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.1.0",
    "babel-preset-env": "^1.7.0",
    "bootstrap": "^4.5.0",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^1.2.3",
    "core-js": "^3.6.5",
    "jest": "^24.9.0",
    "node-normalize-scss": "^8.0.1",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-html-parser": "^2.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "gl-matrix": "^3.3.0",
    "waypoints": "^4.0.1"
  },
  "config": {
    "dist_dir": "dist",
    "template_dir": "templates",
    "sass_src": "src/sass/style.scss",
    "css_dist": "dist/css/style.css",
    "domain": "http://playground.ddev.site"
  }
}
